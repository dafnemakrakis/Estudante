<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fundoentrada" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66"
        tools:layout_editor_absoluteX="16dp">

        <ImageButton
            android:id="@+id/btnFasesNivelUm"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/um" />

        <ImageButton
            android:id="@+id/btnFasesNivelDois"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/dois" />

        <ImageButton
            android:id="@+id/btnFasesNivelTres"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginEnd="32dp"
            app:srcCompat="@drawable/tres" />

        <ImageButton
            android:id="@+id/btnFasesNivelBonus"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/bonus" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
